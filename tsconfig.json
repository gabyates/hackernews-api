{
    "ts-node": {
        "swc": true,
        "transpileOnly": true,
    },
    "compilerOptions": {
        /* Module resolution */
        "baseUrl": ".",
        "paths": { "@/*": ["src/*"] },

        "moduleResolution": "Node",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "lib": ["ESNext"],
        "esModuleInterop": true,
        "jsx": "preserve",
        "downlevelIteration": true
    }
}
